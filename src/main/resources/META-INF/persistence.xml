<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
	version="2.1">

	<persistence-unit name="JPADB"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<mapping-file>META-INF/project-orm.xml</mapping-file>
		<properties>
			<!-- Database connection properties -->
			<!-- <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hibernate_tutorial" 
				/> -->
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/hibernate_tutorial" />
			<!-- <property name="javax.persistence.jdbc.user" value="root" /> <property 
				name="javax.persistence.jdbc.password" value="asdf1234" /> -->
			<property name="javax.persistence.jdbc.user"
				value="postgres" />
			<property name="javax.persistence.jdbc.password"
				value="asdf1234" />


			<!-- Use latest mysql driver instead of old deprecated one com.mysql.jdbc.Driver -->
			<!-- <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" 
				/> -->
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />

			<!-- properties to log and format sql statements generated by hibernate -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="use_sql_comments" value="true" />

			<!-- Dialect to be use -->
			<!-- Use latest Mysql5Dialect instead of old MysqlDialect -->
			<!-- <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" 
				/> -->
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />

			<!-- Schema update configuration -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property value="true"
				name="hibernate.id.new_generator_mappings" />

			<!-- Stop propagation of constraints to ddl statements -->
			<property name=" hibernate.validator.apply_to_ddl "
				value="true" />

			<!-- Since bean validation is by default is on, i.e if there is a bean 
				validation implementation libraries in class path, then jpa will automatically 
				validate entities if they are annotaed with javax.validation annotations. 
				If you want to disable bean validation at all or want to change the beahaviour 
				then use this property with threee different values AUTO, CALLBACK, NONE. 
				Check documentation for this property for more information -->
			<property name="javax.persistence.validation.mode"
				value="AUTO" />

			<property
				name="javax.persistence.validation.group.pre-update"
				value="" />

		</properties>
	</persistence-unit>

</persistence>