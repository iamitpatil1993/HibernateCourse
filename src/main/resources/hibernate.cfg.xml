<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- Database connection properties -->
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hibernate_tutorial</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">asdf1234</property>

		<!-- hinernate's default connection pool cofiguration -->
		<property name="hibernate.connection.pool_size">1</property>

		<!-- properties to log and format sql statements generated by hibernate -->
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="use_sql_comments">true</property>

		<!-- Dialect setting -->
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

		<!-- Schema update configuration -->
		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<property name="hibernate.current_session_context_class">thread</property>

		<!-- List annoted entity classes here -->
		<mapping class="com.example.hibernate.model.Message"/>
		
		<!-- Mapping file declaration -->
		<mapping resource="com/example/hibernate/noopaccess/NoopAccessDemo.xml"/>

	</session-factory>
</hibernate-configuration>	